#!/bin/bash
set -euf

self="${0}"
workdir="$(dirname "$(realpath "${self}")")"
cd "${workdir}"

case "${1:-}" in
  "fmt")
    set -x
    find . -maxdepth 1 -type f -name '*.py' -exec \
      autopep8 --in-place -j 0 -aaa --max-line-length 150 {} '+'
    ;;
     "docker-build")
    docker build -t dns-test:latest .
    ;;
     "docker-run")
        docker run --rm -t dns-test:latest ${@:2}
    ;;
  *)
    echo "usage: ${self} <fmt|docker-build|docker-run>"
    ;;
esac
